@model InvestigacionModel
<input asp-for="Id" type="text" class="form-control" hidden>
<div class="form-row">
    <div class="col-sm-12">
        <label asp-for="NombreApellidos"></label>
        <input asp-for="NombreApellidos" type="text" class="form-control" required>
        <span asp-validation-for="NombreApellidos" class="text-danger"></span>
    </div>
    <div class="col-sm-6">
        <label asp-for="FechaNacEdad"></label>
        <input asp-for="FechaNacEdad" type="text" class="form-control">
    </div>
    <div class="col-sm-6">
        <label asp-for="PuebloDeNaturaleza"></label>
        <input asp-for="PuebloDeNaturaleza" type="text" class="form-control">
    </div>
    <div class="col-sm-6">
        <label asp-for="ProvinciaDeNaturaleza"></label>
        <input asp-for="ProvinciaDeNaturaleza" type="text" class="form-control">
    </div>
    <div class="col-sm-6">
        <label asp-for="Pais"></label>
        <input asp-for="Pais" type="text" class="form-control">
    </div>
    <div class="col-sm-12">
        <label asp-for="Observaciones"></label>
        <textarea asp-for="Observaciones" type="text" class="form-control"></textarea>
        <span asp-validation-for="Observaciones" class="text-danger"></span>
    </div>
    <div class="col-sm-12">
        <label asp-for="Url"></label>
        <textarea asp-for="Url" type="text" class="form-control" required></textarea>
        <span asp-validation-for="Url" class="text-danger"></span>
    </div>
</div>