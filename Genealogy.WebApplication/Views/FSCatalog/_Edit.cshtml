@model FSCatalogModel
<div class="form-row">
	<input asp-for="Id" type="text" class="form-control" hidden>
	<div class="col-sm-6">
		<label asp-for="Name"></label>
		<input asp-for="Name" type="text" class="form-control" required>
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="col-sm-12">
		<label asp-for="Format"></label>
		<input asp-for="Format" type="text" class="form-control">
	</div>
	<div class="col-sm-12">
		<label asp-for="Author"></label>
		<input asp-for="Author" type="text" class="form-control">
	</div>
	<div class="col-sm-12">
		<label asp-for="Publication"></label>
		<input asp-for="Publication" type="text" class="form-control">
	</div>
	<div class="col-sm-12">
		<label asp-for="Number"></label>
		<input asp-for="Number" type="text" class="form-control">
	</div>
	<div class="col-sm-12">
		<label asp-for="Note"></label>
		<input asp-for="Note" type="text" class="form-control">
	</div>
	<div class="col-sm-12">
		<label asp-for="Observaciones"></label>
		<textarea asp-for="Observaciones" type="text" class="form-control"></textarea>
	</div>
	<div class="col-sm-12">
		<label asp-for="Url"></label>
		<textarea asp-for="Url" type="text" class="form-control" required></textarea>
		<span asp-validation-for="Url" class="text-danger"></span>
	</div>
</div>